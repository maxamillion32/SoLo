<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:alpha="0.3"
    android:background="@drawable/newpost_bg"
    android:scaleType="fitXY"
    android:adjustViewBounds="true"
    android:id="@+id/newpost_image" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:id="@+id/newpost_text"
        android:hint="Where should I go for lunch?"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/newpost_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_map_marker"
        android:layout_alignBaseline="@+id/newpost_send"
        android:layout_alignBottom="@+id/newpost_send"
        android:layout_toLeftOf="@+id/newpost_send"
        android:layout_toStartOf="@+id/newpost_send" />

    <TextView
    android:id="@+id/newpost_send"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableRight="@drawable/ic_plus_circle_outline"
        android:layout_alignBottom="@+id/newpost_image"
        android:layout_alignRight="@+id/newpost_text"
        android:layout_alignEnd="@+id/newpost_text" />


</RelativeLayout>